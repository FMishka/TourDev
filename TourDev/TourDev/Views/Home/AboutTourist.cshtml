@model IEnumerable<Ticket>
@using (Html.BeginForm())
{
<p>
    <select class="form-select" name="currentTourist" asp-items="ViewBag.Tourists">
        <option value="">Выбирите туриста</option>
    </select>
    <input type="submit" value="Search" class="btn btn-success" />
</p>
}
<table class="table" style="color: white">
    <tr>
        <td>Кол-во</td>
        <td>Ид</td>
        <td>Имя</td>
        <td>Возраст</td>
        <td>Страна</td>
        <td>Прилёт</td>
        <td>Отлёт</td>
        <td>Ид груза</td>
        <td>Цель поездки</td>
        <td>Желаемый отель</td>
        <td>Экскурсии</td>
    </tr> 
    @{
        int count = 0;
        @foreach (var item in Model)
        {
                count += 1;
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.Tourist.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tourist.Initials)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tourist.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>@item.Arrival_date.ToShortDateString()</td>
                    <td>@item.Departure_date.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.BagId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tourist.Visit_purpose)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tourist.Hotel.Name)</td>
                    <td>@Html.DropDownList("ex", ViewBag.Ex as SelectList, "Все экскурсии")</td>
                </tr>
        }
    }
</table>